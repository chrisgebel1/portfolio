{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Projet{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {# Theme CSS perso #}
    <link href="{{ asset('css/projects.css')}}" rel="stylesheet">
    <link href="{{ asset('css/project.css')}}" rel="stylesheet">

{% endblock %}

{% block body %}

{#    <!-- Masthead -->#}
{#    <header class="masthead-projects mastheadSimple Merriweather bg-dark">#}
{#        <div class="container h-100">#}
{#            <div class="row h-100 a align-items-sm-start align-items-md-center">#}
{#            </div>#}
{#        </div>#}
{#    </header>#}

<main class="site-section">

    <div class="site-section pb-0 pt-0">
        <div class="container">
            <div class="mx-2 mx-md-0 mb-3">
                <div class="mb-lg-0" data-aos="fade-up">
                    <h2><a href="{{ path('app_projects_allprojects') }}">Mes Projets</a></h2>
                </div>
            </div>
            <div class="row align-items-stretch">
                <div class="col-md-8" data-aos="fade-up" id="single-project">
                    <div class="mb-3">
                        <a href="{{ asset('img/portfolio/' ~ project.files[0]) }}" title="{{ project.infoShort }}">
                        <img src="{{ asset('img/portfolio/' ~ project.files[0]) }}" alt="{{ project.infoShort }}" title="{{ project.infoShort }}" class="img-fluid">
                        </a>
                    </div>
                    <div class="row mb-md-0 mb-5">
                        {% if project.files|length > 1 %}
                            {% for file in project.files %}
                                {% if loop.index0 != 0 %}
                                <div class="col-2">
                                    <div>
                                        <a href="{{ asset('img/portfolio/' ~ file) }}" title="{{ project.infoShort }}">
                                        <img src="{{ asset('img/portfolio/' ~ file) }}" alt="{{ project.infoShort }}" title="{{ project.infoShort }}" class="img-fluid">
                                        </a>
                                    </div>
                                </div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-3 ml-auto" data-aos="fade-up" data-aos-delay="100">
                    <div class="sticky-content">
                        <h3 class="h3">{{ project.name }}</h3>
                        <p class="mb-4">
                            <span class="text-muted"><small>{{ project.type }}</small></span><br>
                            <span class="text-muted">{{ project.category }}</span>
                        </p>

                        <div class="mb-5">
                            <p>{{ project.infoLong }}</p>
                        </div>


                        <h4 class="h4 mb-3">What I did</h4>
                        <ul class="list-unstyled list-line mb-5">
                            <li>Design</li>
                            <li>HTML5/CSS3</li>
                            <li>CMS</li>
                            <li>Logo</li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if moreProjects|length > 1 %}
        <div class="site-section pb-0">
            <div class="container">
                <div class="row justify-content-center text-center mb-4">
                    <div class="col-5">
                        <h3 class="h3 heading">Autres projets</h3>
                        <p>de la cat√©gorie {{ project.category }}</p>
                    </div>
                </div>

                <div class="row" data-aos="fade-up" data-aos-delay="200">
                    {% for moreProject in moreProjects %}
                        {% if moreProject.id != project.id %}
                        <div class="item branding col-sm-6 col-md-4 col-lg-4 mb-4">
                            <a href="{{ path('app_projects_singleproject', {"id":moreProject.id}) }}" class="item-wrap fancybox">
                                <div class="work-info">
                                    <h3>{{ moreProject.name }}</h3>
                                    <span>{{ moreProject.category }}</span>
                                </div>
                                <div class="img-square">
                                    <img class="img-fluid" src="{{ asset('img/portfolio/' ~ moreProject.files[0]) }}">
                                </div>
                            </a>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
    </main>



{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/magnific_single-project.js') }}"></script>

{% endblock %}
