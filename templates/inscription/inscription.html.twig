{% extends 'base.html.twig' %}

{% block body %}

    <!-- Masthead -->
    <header class="masthead Merriweather">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h2 class="text-uppercase text-white font-weight-bold">Inscription</h2>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    {{ form_start(inscriptionForm) }}

                        {{ form_row(inscriptionForm.pseudo) }}
                        {{ form_row(inscriptionForm.plainpassword) }}

                        <div class="form-group">
                            <button type="submit" class="btn btn-dark w-100 mt-4">S'inscrire</button>
                        </div>

                    {{ form_end(inscriptionForm) }}

                    {# Messages Flash #}
                    {% include '_messageFlash.html.twig' %}

                </div>
            </div>
        </div>
    </header>

{% endblock %}
