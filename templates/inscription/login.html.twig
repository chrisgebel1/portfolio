{% extends 'base.html.twig' %}

{% block body %}

    <!-- Masthead -->
    <header class="masthead Merriweather">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h2 class="text-uppercase text-white font-weight-bold">Connexion</h2>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <form action="" method="post">
                        <div class="form-group">
                            <label>Pseudo</label>
                            <input type="text" name="_username" class="form-control" value="{{ last_usernname }}">
                        </div>
                        <div class="form-group">
                            <label>Mot de passe</label>
                            <input type="password" name="_password" class="form-control">
                        </div>

                        {# $_SERVER['HTTP_REFERER'] #}
                        <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}">

                        <div class="form-group">
                            <button type="submit" class="btn btn-dark w-100 mt-4">Se connecter</button>
                        </div>
                    </form>

                    {# Messages Flash #}
                    {% include '_messageFlash.html.twig' %}


                </div>
            </div>
        </div>
    </header>

{% endblock %}
